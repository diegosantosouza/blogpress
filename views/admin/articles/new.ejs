<%- include ('../../partials/header.ejs')%>

<%- include ('../../partials/navbar.ejs')%>

<body>
    
<div class="container">
    <hr>
        <div class="card">
            <div class="card-header"><h2>Novo Artigo</h2></div>
            <div class="card-body">
                <form method="POST" action="/categories/save">
                    <input class="form-control" type="text" name="title" placeholder="Defina o titulo do artigo"><br>
                    <textarea class="form-control" name="body" placeholder="Escreva o artigo aqui!" id="article"></textarea><br>
                    <button type="submit" class="btn btn-success">Cadastrar</button>
                </form>
            </div>
            
        </div>
</div>

</body>
<%- include ('../../partials/footer.ejs')%>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: "pt_PT",
        selector: "#article",
        plugins: ['advlist autolink link image list print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'],
        height: 300
    });
</script>